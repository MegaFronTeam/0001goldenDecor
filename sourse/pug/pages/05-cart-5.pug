//- include ../blocks/sBlog/_sBlog.pug
include ../blocks/sCart/_sCart.pug
include ../blocks/sPaymentMethod/_sPaymentMethod.pug
include ../blocks/sCatalog/_sCatalog.pug

block variables
	- let  mainPage= 'main-page' 
	- let  bg= '05-cart-5.jpg'

block title
	- let  title= inner.head.titleCart
	title= title
block pagecontent
	//- +mob-mnu()
	
	
	.header
		+topLine
		+top-nav()
	//- +headerBlock
	+page-head({
		title,
		back: "В карточку товара",
		cart: true
	})
		+breadcrumb('Главная', 'Журнал')
	+sCart('', 'promocode').sCart--promocode
		+sPaymentMethod()
	+checkout('Продолжить', 'На шаг назад' ,'').active.active2
	+footer()
      



