mixin mnu()
	ul.menu(itemscope itemtype="http://schema.org/SiteNavigationElement")
		each link in categories
			li.menu-item(itemprop="item" ): a(href= link.url itemprop="url" class=(link.active  ? "active": null))= link.name
			if link.subnav
				li.menu-item.menu-item-has-children
