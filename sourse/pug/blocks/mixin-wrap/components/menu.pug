mixin mnu3()
	+b.menu-slider--js.swiper
		ul.menu.swiper-wrapper(itemscope itemtype="http://schema.org/SiteNavigationElement")
			each link in categories
				li.menu-item.swiper-slide(itemprop="item" ): a(href= link.url itemprop="url" class=(link.active  ? "active": null))= link.name
				if link.subnav
					li.menu-item.menu-item-has-children
						a(href="#" itemprop="url") О нас
						ul.sub-menu
							each sublink in link.subnav
								li.menu-item(itemprop="item" ): a(href= sublink.url itemprop="url")= sublink.name

