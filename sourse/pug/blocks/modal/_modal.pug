mixin modal-custom-body()
	+b.modal-custom--cabinet&attributes(attributes)
		+b.toggle-menu-mobile--2js.on
			span
		block
mixin modal() 
	//  start modals
	+modal-custom-body()#modal-cabinet
		+e.title Войдите или зарегистрируйтесь на&nbsp;сайте
		.tabs
			.tabs__caption
				.tabs__btn.active Вход
				.tabs__btn Регистрация
			.tabs__wrap
				.tabs__content
					+form-wrap
						+input('Телефон или e-mail', 'text')
						
						.input-btn-wrap
						
							+input('Пароль', 'password')
							+b.input-btn--password-toggle 
								<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M4 4L20 20" stroke="#05141F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="path-line"/>
									<path d="M16.5 16.756C15.1474 17.4846 13.6186 18 12 18C6.47715 18 2 12 2 12C2 12 4.08842 9.20123 7.17205 7.4267M19.5 14.6337C21.0559 13.2652 22 12 22 12C22 12 17.5228 6 12 6C11.6625 6 11.3289 6.02241 11 6.06448" stroke="#05141F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
									<path d="M13.3229 13.4999C12.9703 13.8111 12.5072 13.9999 12 13.9999C10.8954 13.9999 10 13.1045 10 11.9999C10 11.4604 10.2136 10.9708 10.5609 10.6111" stroke="#05141F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								</svg>
						.text-end
							a.tdu(href="#") Забыли пароль? 
						+e.BUTTON.btn.btn-primary(type="submit"  ).w-100   Войти
						.text-center.text-secondary.mb-4 или через соцсети
						+b.soc-btns
							+e.btn--vk(type="button") 
								+icon("vk")
								+e.SPAN.btn-text Вконтакте
								
							+e.btn--fb(type="button") 
								+icon("fb-btn")
								+e.SPAN.btn-text Facebook
							+e.btn--ya(type="button") 
								img(src="img/svg/yandex.png", alt="")
								+e.SPAN.btn-text Яндекс

						+policy()
							
				.tabs__content.active
					+form-wrap
						+input('Телефон', 'tel')
						+input('E-mail', 'text')
						
						.input-btn-wrap 
							+input('Пароль', 'password')
							+b.input-btn--password-toggle 
								<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M4 4L20 20" stroke="#05141F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="path-line"/>
									<path d="M16.5 16.756C15.1474 17.4846 13.6186 18 12 18C6.47715 18 2 12 2 12C2 12 4.08842 9.20123 7.17205 7.4267M19.5 14.6337C21.0559 13.2652 22 12 22 12C22 12 17.5228 6 12 6C11.6625 6 11.3289 6.02241 11 6.06448" stroke="#05141F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
									<path d="M13.3229 13.4999C12.9703 13.8111 12.5072 13.9999 12 13.9999C10.8954 13.9999 10 13.1045 10 11.9999C10 11.4604 10.2136 10.9708 10.5609 10.6111" stroke="#05141F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								</svg>
								
						.input-btn-wrap 
							+input('Повторите пароль', 'password')
							+b.input-btn--password-toggle 
								<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M4 4L20 20" stroke="#05141F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="path-line"/>
									<path d="M16.5 16.756C15.1474 17.4846 13.6186 18 12 18C6.47715 18 2 12 2 12C2 12 4.08842 9.20123 7.17205 7.4267M19.5 14.6337C21.0559 13.2652 22 12 22 12C22 12 17.5228 6 12 6C11.6625 6 11.3289 6.02241 11 6.06448" stroke="#05141F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
									<path d="M13.3229 13.4999C12.9703 13.8111 12.5072 13.9999 12 13.9999C10.8954 13.9999 10 13.1045 10 11.9999C10 11.4604 10.2136 10.9708 10.5609 10.6111" stroke="#05141F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								</svg> 
						+e.BUTTON.btn.btn-primary(type="submit"  ).w-100 Зарегистрироваться
						.text-center.text-secondary.mb-4 или через соцсети
						+b.soc-btns
							+e.btn--vk(type="button") 
								+icon("vk")
								+e.SPAN.btn-text Вконтакте
								
							+e.btn--fb(type="button") 
								+icon("fb-btn")
								+e.SPAN.btn-text Facebook
							+e.btn--ya(type="button") 
								img(src="img/svg/yandex.png", alt="")
								+e.SPAN.btn-text Яндекс

						+policy()
							
	+modal-custom-body()#modal-call
		+e.title Заказать обратный звонок
		+e.sub-text Оставьте контакты и уточните свой вопрос. Менеджер свяжется с вами 
		+form-wrap
			+input('Телефон', 'tel')
				.invalid-feedback Поле обязательно для заполнения
			+input('E-mail', 'email')
			+input('Ваш комментарий или вопрос (необязательно)', 'textarea','') 
			+policy2()
			+e.BUTTON.btn.btn-primary(type="submit"  ).w-100   Отправить 

	+modal-custom-body()#modal-application
		+e.title Заказать поклейку обоев
		+e.sub-text Наш специалист свяжется с вами, подробно проконсультирует и ответит на ваши вопросы.
		+form-wrap
			+input('Фамилия имя отчество')
			+input('Телефон', 'tel')
				.invalid-feedback Поле обязательно для заполнения
			+input('E-mail', 'email')
			+input('Дата рождения')
			+input('Сопроводительное письмо', 'textarea','')
			p Сканы диплома, сертификатов об&nbsp;образовании. Можно прикрепить несколько файлов в&nbsp;формате jpg, png или pdf, размером не&nbsp;более 20&nbsp;Мб.
			+input('Нажмите чтобы загрузить файлы', 'file','')
			+policy2()
			+e.BUTTON.btn.btn-primary(type="submit"  ).w-100   Отправить 

	+modal-custom-body()#modal-request
		+e.title Заказать поклейку обоев
		+e.sub-text Наш специалист свяжется с вами, подробно проконсультирует и ответит на ваши вопросы.
		+form-wrap
			+input('Ваше имя')
			+input('Телефон', 'tel')
				.invalid-feedback Поле обязательно для заполнения
			+input('E-mail', 'email')
			+input('Ваш комментарий или вопрос (необязательно)', 'textarea','') 
			+policy2()
			+e.BUTTON.btn.btn-primary(type="submit"  ).w-100   Отправить 


