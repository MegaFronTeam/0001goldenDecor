mixin sPartners-item(i)
	+e.item
		+pic(`sPartners-img-${i}.png`)

mixin sPartners(data)
	// start sPartners
	+b.SECTION.sPartners.section#sPartners&attributes(attributes)
		.container
			+b.section-title.text-center
				h2!= sPartners.title
				p!= sPartners.text
			.row
				.col-sm-6.col-md-4.col-lg
					+sPartners-item(1)
				.col-sm-6.col-md-4.col-lg 
					+sPartners-item(2)
				.col-sm-6.col-md-4.col-lg 
					+sPartners-item(3)
				.col-sm-6.col-md-4.col-lg 
					+sPartners-item(4)
				.col-sm-6.col-md-4.col-lg 
					+sPartners-item(5)
	// end sPartners