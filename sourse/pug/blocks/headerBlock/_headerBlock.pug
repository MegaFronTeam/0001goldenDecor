mixin headerBlock()
	// start headerBlock
	+b.headerBlock.section#headerBlock&attributes(attributes)
		+e.container.container
			+e.slider--js.swiper
				.swiper-wrapper
					- for (var x = 0; x < 3; x++)
						+e.slide.swiper-slide.bg-wrap
							+e.caption
								+e.head
									+pic('head-img.jpg','bg').picture-bg
									+e.label Новинка
									.h1 Коллекция Amazonia
									+pic('head-logo.png').head-logo
								+e.body
									p Дизайны коллекции обоев Amazonia пронизаны философией гармонии.
									+e.btn(href="#") Подробнее
			.d-none.d-sm-block
				+arrow
			.swiper-pagination
	// end headerBlock